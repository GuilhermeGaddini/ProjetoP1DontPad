<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Texto">

    <EditText
        android:id="@+id/linkEditText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/linkEditText_Hint"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/textoEditText"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/HintTextoTexto"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/botaoTexto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/botaoAlt"
        android:layout_weight="1"
        android:onClick="imagensOnClick"
        android:text="@string/botaoImagens_Text" />
</LinearLayout>